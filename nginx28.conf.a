events { worker_connections 1024; }

http {
  server {
    listen 80;

    # requests to http://localhost/... are forwarded
    location / {
      proxy_pass http://frontend:3000;
    }

    # requests to http://localhost/api/... are forwarded
    location /api/ {
      proxy_set_header Host $http_host;
      proxy_pass http://backend:80/;
    }
  }
}